功能要求：
1.单词及其英文解释的录入、修改和删除
   (1 ) 录入新单词，把它插入到相应的位置(按词典顺序)，其后跟英文解释、同义词、反义词；
   (2 ) 可修改单词英文解释；
   (3 ) 删除单词及其英文解释；
2.查找：
(3)	输入不完整的字符串，会依顺序列出单词前缀和字符串相匹配的单词；
如输入：en
列出：enable, enabled, enact等
(4)	查询某个单词英文解释(如enable: to provide with the means or opportunity; to make possible, practical, or easy)，词库中不存在此单词，则提示找不到；
(5)	查询某个单词的同义词(如accept: approve)；
(6)	查询某个单词的反义词(如win: lose)；
以上结果均需显示


以下为汇编代码：
scroll macro   n,ulr,ulc,lrr,lrc,att ;宏定义
        mov ah,6       ;清屏或上卷
        mov al,n       ;n=上卷行数；n=0时，整个窗口空白
        mov ch,ulr     ;左上角行号
        mov cl,ulc     ;左上角列号
        mov dh,lrr     ;右下角行号
        mov dl,lrc     ;右下角列号
        mov bh,att     ;卷入行属性
        int 10h   
endm

locate  macro  cury,curx    
          mov ah,2            ;置光标位置
          mov dh,cury         ;行号
          mov dl,curx         ;列号
          mov bh,0            ;当前页
          int 10h    
endm

Sout macro address1,address2   ;字符串输出
       push dx
       push ds
       mov ax,address1
       mov ds,ax
       lea dx,address2 
       mov ah,9
       int 21h
       pop ds
       pop dx
endm

Show macro address
       mov ax,data2
       mov ds,ax
       lea dx,address
       mov ah,9
       int 21h
       Sout data1,out0

       add dx,8
       int 21h
       Sout data1,out0
       
       add dx,104
       int 21h
       Sout data1,out0
  
       add dx,8
       int 21h
endm

Sin macro 
        mov ax,data2
        mov ds,ax
        lea dx,word0
        mov ah,0ah
        int 21h 
endm

data1 segment        ;菜单信息
 out0 db '      $'
 out1 db 'Welcome to use the dictionary which is maded by Siqi!!$'
 out2 db 'You can input the number to choose funtion(Input 0 to exit):$'
 out3 db '1.Modify the dictionary;$'
 out4 db '2.Search the dictionary;$'
 out5 db '1.Insert a word and its explain, synonym,antonym;$'
 out6 db '2.Modify the explain of a word;$'
 out7 db '3.Delete a word and its explain$'
 out8 db '1.Fuzzy query;$'   ;模糊查询
 out9 db '2.Search explain;$'  ;查找解释
 out10 db '3.Search synonym;$'  ;查找同义词
 out11 db '4.Search antonym$'    ;查找反义词
 insert1 db 'Input the word:$'
 insert2 db 'Input the explain:$'
 insert3 db 'Input the synonym:$'
 insert4 db 'Input the antonym:$'
 insert5 db 'The word has been in the dictionary!$'
 insert6 db 'Now the dictionary is: $'
 modify1 db 'The word is not in the dictionary!$'
 modify2 db 'Before modify the explain of word is:$ '
 modify3 db 'Input the explain of the word:$'
 modify4 db 'After modify the explain of word is:$'
 explain1 db 'The word explain is:$'
 synonym1 db 'The word synonym is:$'
 antonym1 db 'the word antonym is:$'
 data1 ends
 
data2 segment   ;字典数据的存储单元
 word0 db 126,0,126 dup('$')   ;输入数据缓冲区 
 word1 db 'enable$$','to provide with the means or opportunity; to make possible, practical, or easy',26 dup ('$'),'allow$$$','prevent$'
 word2 db 'enabled$','render capable or able for some task',68 dup('$'),'permit$$','prevent$'
 word3 db 'enact$$$','order by virtue of superior authority',67 dup('$'),'pass$$$$','reject$$'
 word4 db 'good$$$$','good means pleasant or enjoyable',72 dup('$'),'great$$$','bad$$$$$'
 word5 db 128 dup('$')
 word6 db 128 dup('$')
 word7 db 128 dup('$')
 word8 db 128 dup('$')
 word9 db 128 dup('$')
 word10 db 128 dup('$')
 data2 ends


code  segment
assume cs:code,ds:data1
start:
       call MainMenu
       call choose
       cmp al,31h
       jz first1
       cmp al,32h
       jz first2
       jmp exit

first1:
       call First1Menu
       call choose
       cmp al,31h
       jz Insert
       cmp al,32h
       jz Modify
       cmp al,33h
       jz Delete
       jmp exit


Insert:
      call Insertf
      jmp exit

Modify:
     call Modifyf
     jmp exit


Delete:
     call Deletef
     jmp exit

first2:
       call First2Menu
       call choose
       cmp al,31h
       jz Fuzzy 
       cmp al,32h
       jz Explain
       cmp al,33h
       jz Synonym
       cmp al,34h
       jz Antonym
       jmp exit

Fuzzy:
      call Fuzzyf
      jmp exit

Explain:
        call Explainf
        jmp exit
Synonym:
        call Synonymf
        jmp exit
Antonym:
        call Antonymf
        jmp exit



exit: 
       mov ax,4c00h
       int 21h


;以下是函数部分

choose:
    mov ah,01
    int 21h
    ret

MainMenu:
       call cls
       locate 4,12
       Sout data1,out1
       locate 5,10
       Sout data1,out2
       locate 7,16
       Sout data1,out3
       locate 8,16
       Sout data1,out4
       locate 9,0
       ret

First1Menu:
       call cls
       locate 5,16
       Sout data1,out2
       locate 7,16
       Sout data1,out5
       locate 8,16
       Sout data1,out6
       locate 9,16
       Sout data1,out7
       locate 10,0
       ret


First2Menu:
       call cls
       locate 5,12
       Sout data1,out2
       locate 7,16
       Sout data1,out8
       locate 8,16
       Sout data1,out9
       locate 9,16
       Sout data1,out10
       locate 10,16
       Sout data1,out11
       locate 11,0
       ret 

cls:
    scroll 0,0,0,24,79,02
    ret

Insertf:
        call cls
        locate 5,12
        Sout data1,insert1
        lea si,word0
        call clean
        Sin
        ;定位单词输入的位置
        mov ax,data2   
        mov ds,ax
        lea di,word1
        mov cx,10

loop1:
        push cx
        lea si,word0+1
        mov cl,[si]
        mov ch,0
        mov ax,cx
        inc si

loop2:  mov bl,[si]
        cmp bl,[di]
        ja next1
        jb next2
        inc si
        inc di
        loop loop2
        locate 6,12
        Sout data1,insert5
        pop cx
        jmp exitinsertf

next1:  add di,cx
        sub di,ax
        mov bl,[di]
        cmp bl,24h
        jz next4      ;遇到$插入
        jmp next3
next2:           
        add di,cx
        sub di,ax
        pop cx
        jmp next
     
next3:              
        pop cx
        add di,80h
        loop loop1

next4:
       pop cx
       jmp next

next:   
        call backmove    ;后移
        mov si,di
        call clean       ;清零
        call move        ;写入
        ;定位结束，输入解释、近义词、反义词
        
        locate 6,12         ;输入解释
        Sout data1,insert2
        Sin
        add di,8
        call move

        locate 7,12     ;输入近义词
        Sout data1,insert3 
        lea si,word0    ;清除缓冲区
        call clean
        Sin
        add di,104
        call move
